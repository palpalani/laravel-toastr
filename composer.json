{
    "name": "palpalani/laravel-toastr",
    "description": "Implements toastr.js for Laravel projects",
    "keywords": [
        "palpalani",
        "laravel-toastr",
        "toastr",
        "notification",
        "laravel",
        "php"
    ],
    "homepage": "https://github.com/palpalani/laravel-toastr",
    "license": "MIT",
    "authors": [
        {
            "name": "palPalani",
            "email": "palani.p@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/session": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.15",
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^11.0|^12.0",
        "vimeo/psalm": "^5.0|^6.0"
    },
    "autoload": {
        "psr-4": {
            "palPalani\\Toastr\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "palPalani\\Toastr\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "palPalani\\Toastr\\ToastrServiceProvider"
            ],
            "aliases": {
                "Toastr": "palPalani\\Toastr\\Facades\\Toastr"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
